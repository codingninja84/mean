  function foo()
  {
      return "hello world"
  }

  foo();
  </div>

  </head>
  <body>
    <div class="console">
    </div>
    <div class="form" draggable="true">
      <form class="" action="/login" method="post">
        First Name: <input type="text" class="first_name" name="first_name" value="" draggable="true">
        Last Name: <input type="text" name="last_name" value="">
        Favorite Language: <select class="" name="lang">
                            <option value="javascript">JavaScript</option>
                            <option value="python">Python</option>
                          </select>
        Comments: <textarea name="text" rows="4" cols="40"></textarea>
        <input type="submit" name="" value="Login">
        <button type="button" class="button "name="button"></button>
        <div class="placeText"></div>
      </form>
    </div>

  </body>
</html>
