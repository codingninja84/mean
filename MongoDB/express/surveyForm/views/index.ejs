<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <script src="jquery/dist/jquery.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
    $(document).ready(function (){
      alert("test")
      var socket = io.connect();
      $('.button').click(function (){
        socket.emit("button_clicked", {reason: "because I want to learn about sockets!"});
        });
      $('.first_name').keypress(function(){
        var text = $('.first_name').val()
        socket.emit("first_name_typed", {input: text})
      })
        socket.on('server_response', function (data){
          $('.placeText').append(data.response);
        });

        socket.on("text_response", function(input){
          $('.placeText').html(input.input);
        });
    })
</script>
  <style media="screen">
    body {
      height: 400px;
    }
    .form {
      width: 79%;
      display: inline-block;
    }

    .console {
      display: inline-block;
      width: 100%;
      height: 100%;
    }
  </style>
